{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order", ":article_id"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }

      ]
    }
  },

  
"GET /api/articles/:articleid": {
    "description": "serves an array of all articles from article_id",
    "queries": ["author", "topic", ":article_id", "title", "body", "created_at", "votes", "article_img_url"],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 10,
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }

      ]
    }
  },


  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments from an article_ID",
    "queries": ["author", "topic", "sort_by", "order", ":article_id"],
    "exampleResponse": {
      "comments": [
        {
          "article_id": 2,
          "comment_id": 10,
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0
          
        }

      ]
    }
  }
  
  

  
